extends: default

rules:
  document-start:
    level: error
  line-length: disable
  key-duplicates: disable
  truthy: disable
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  braces:
    forbid: false
    min-spaces-inside: -1
    max-spaces-inside: -1
    min-spaces-inside-empty: -1
    max-spaces-inside-empty: -1
  brackets:
    forbid: false
    min-spaces-inside: -1
    max-spaces-inside: -1
    min-spaces-inside-empty: -1
    max-spaces-inside-empty: -1
